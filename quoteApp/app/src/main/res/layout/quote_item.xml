<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/cardview"
    android:background="?attr/selectableItemBackground"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:singleLine="false"
            android:textAppearance="?attr/textAppearanceListItem" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id"
            android:id="@+id/option"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp">

            <ImageView
                android:id="@+id/favbtn"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/ic_love"
                android:backgroundTint="#2196F3"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/copybtn"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_100sdp"
                android:layout_toEndOf="@+id/favbtn"
                android:alpha="0.6"
                android:background="@drawable/ic_copy"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/bookmarkbtn"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:alpha="0.6"
                android:layout_toEndOf="@+id/copybtn"
                android:background="@drawable/ic_class"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/sharebtn"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_toEndOf="@+id/bookmarkbtn"
                android:background="@drawable/sharing"
                android:contentDescription="@string/app_name" />


        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
